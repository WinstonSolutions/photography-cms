    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch built-in server and debug",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "E:/xampp/htdocs/WebDevelopment2/photography-cms"
            ],
            "cwd": "E:/xampp/htdocs/WebDevelopment2/photography-cms",
            "port": 9003,
            "pathMappings": {
                "/": "E:/xampp/htdocs/WebDevelopment2/photography-cms"
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Development Server \\(http://localhost:8000\\)",
                "uriFormat": "http://localhost:8000"
            }
        },
        {
            "name": "Debug current script in console",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "externalConsole": false,
            "port": 9003
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        }
    ]
}